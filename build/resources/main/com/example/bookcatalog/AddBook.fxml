            </TextField>
            <TextField fx:id="t6" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <GridPane.margin>
                  <Insets right="40.0" />
               </GridPane.margin>
            </TextField>
            <CheckBox fx:id="checkSubtitle" mnemonicParsing="false" onAction="#checkSubtitle" prefHeight="26.0" prefWidth="166.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <graphic>
                  <TextField fx:id="t7" visible="false" />
               </graphic>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </CheckBox>
            <CheckBox fx:id="checkTranslator" mnemonicParsing="false" onAction="#checkTranslator" GridPane.columnIndex="1" GridPane.rowIndex="7">
               <graphic>
                  <TextField fx:id="t8" visible="false" />
               </graphic>
            </CheckBox>
         </children>
      </GridPane>
   </header>
   <content>
      <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="434.0">
         <children>
            <Button mnemonicParsing="false" text="Cancel">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#addBook" prefHeight="26.0" prefWidth="46.0" text="Add" />
         </children>
      </HBox>
   </content>
